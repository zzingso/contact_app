<!-- views/board/about.ejs -->

<!DOCTYPE html>
<html>
<head>
  <% include ../../partials/head %>
</head>
<body>
  <% include ../../partials/nav %>

  <div class="container post post-index">
    <% include ../partials/header %>

    <div class="buttons">
      <% if(isAuthenticated){ %>
        <a href="/board-home/posts/new" class="btn btn-default">New</a>
      <% } %>
    </div>

    <table class="table table-striped posts">
      <thead>
        <tr>
          <th class="title">Title</th>
          <th class="author">Author</th>
          <th class="date">Date</th>
        </tr>
      </thead>
      <tbody>
        <% if(posts == null || posts.length == 0) { %>
          <tr>
            <td class="noData" colspan="100"> There is no data to show :( </td>
          </tr>
        <% } %>
        <% posts.forEach(function(post) { %>
          <tr>
            <td class="title">
              <a href="/board-home/posts/<%= post._id %>"><div class="ellipsis"><%= post.title %></div></a> <!-- 3 -->
            </td>
            <td class="author"> <!-- 2 -->
              <div class="ellipsis"><%= post.author ? post.author.username : "" %></div> <!-- 3 -->
            </td>
            <td class="date">
              <%= post.createdDate %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
